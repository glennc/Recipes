<form class="form">
    <div class="form-group row">
        <label for="Name" class="col-sm-2 form-control-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Name">
        </div> 
    </div>
    <div class="form-group row">
        <label for="Description" class="col-sm-2 form-control-label">Description</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Description">
        </div> 
    </div>
    <div class="form-group row">
        <label for="imageFile" class="col-sm-2 form-control-label">Image</label>
        <div class="col-sm-10">
            <input type="file" class="form-control-file" id="imageFile" disabled>
            <small class="text-muted">Add an image to display on the main page.</small>
        </div>
    </div>

    <div class="card card-block">
        <h5 class="card-title">Steps</h5>
            <ul class="list-group">
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-sm-1">
                            <span class="label label-default label-pill">1</span>
                        </div>
                        <div class="col-sm-1">
                            <button type="button" class="btn btn-danger">Delete</button>
                        </div>
                        <div class="col-sm-10">
                            <input type="hidden" id="steps[0].Number" value="1">
                            <input type="text" class="form-control" id="steps[0].Text" value="Gather ingredients" disabled>
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-sm-1">
                            <span class="label label-default label-pill">2</span>
                        </div>
                        <div class="col-sm-1">
                            <button type="button" class="btn btn-danger">Delete</button>
                        </div>
                        <div class="col-sm-10">
                            Prepare ingredients
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-sm-1">
                            <span class="label label-default label-pill">3</span>
                        </div>
                        <div class="col-sm-1">
                            <button type="button" class="btn btn-danger">Delete</button>
                        </div>
                        <div class="col-sm-10">
                            Cook.
                        </div>
                    </div>
                </li>
            </ul>
    </div>

</form>

<div class="card card-block">
    <h5 class="card-title">New Step</h5>
        <div class="form-group row">
        <label for="nameInput" class="col-sm-2 form-control-label">Step Instructions</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="nameInput" rows="10"></textarea>
        </div> 
    </div>
    <a href="#" class="card-link">Add Step</a>
</div>